<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_btn_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/tab_img"
        android:layout_width="@dimen/bottom_bar_icon_size"
        android:layout_height="@dimen/bottom_bar_icon_size"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tab_unread_notify_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/tab_img"
        android:background="@drawable/bg_unread_num"
        android:textColor="@android:color/white"
        android:textSize="@dimen/bottom_bar_text_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tab_btn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_img"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/bottom_bar_text_size" />
</RelativeLayout>
